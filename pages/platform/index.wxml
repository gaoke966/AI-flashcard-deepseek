<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="back-text">返回</view>
  <view slot="content">多端适配测试</view>
</cu-custom>

<view class="cu-card article">
  <view class="cu-item shadow">
    <view class="title">
      <view class="text-cut">平台信息</view>
    </view>
    <view class="content">
      <view class="desc">
        <view class="text-content">{{platformInfo}}</view>
        <view class="text-content">平台名称: {{platformName}}</view>
      </view>
    </view>
  </view>
</view>

<view class="cu-card article">
  <view class="cu-item shadow">
    <view class="title">
      <view class="text-cut">支持功能</view>
    </view>
    <view class="content">
      <view class="desc">
        <view class="cu-tag bg-blue light margin-tb-xs" wx:for="{{features}}" wx:key="*this">
          {{item}}
        </view>
      </view>
    </view>
  </view>
</view>

<view class="cu-bar bg-white solid-bottom margin-top">
  <view class="action">
    <text class="cuIcon-title text-blue"></text>功能测试
  </view>
</view>

<view class="cu-list menu">
  <view class="cu-item" bindtap="testPlatformAPI">
    <view class="content">
      <text class="cuIcon-info text-blue"></text>
      <text class="text-grey">平台API测试</text>
    </view>
    <view class="action">
      <text class="cuIcon-right text-gray"></text>
    </view>
  </view>
  
  <view class="cu-item" bindtap="testNetworkRequest">
    <view class="content">
      <text class="cuIcon-wifi text-blue"></text>
      <text class="text-grey">网络请求测试</text>
    </view>
    <view class="action">
      <text class="cuIcon-right text-gray"></text>
    </view>
  </view>
</view>

<!-- 平台特有功能展示 -->
<!-- #ifdef MP-WEIXIN -->
<view class="cu-bar bg-white solid-bottom margin-top">
  <view class="action">
    <text class="cuIcon-weixin text-green"></text>微信特有功能
  </view>
</view>
<view class="padding text-center">
  <button class="cu-btn bg-green" open-type="share">微信分享</button>
</view>
<!-- #endif -->

<!-- #ifdef H5 -->
<view class="cu-bar bg-white solid-bottom margin-top">
  <view class="action">
    <text class="cuIcon-link text-blue"></text>H5特有功能
  </view>
</view>
<view class="padding text-center">
  <button class="cu-btn bg-blue" bindtap="copyLink">复制链接</button>
</view>
<!-- #endif -->

<!-- #ifdef APP-PLUS -->
<view class="cu-bar bg-white solid-bottom margin-top">
  <view class="action">
    <text class="cuIcon-phone text-orange"></text>App特有功能
  </view>
</view>
<view class="padding text-center">
  <button class="cu-btn bg-orange">原生功能</button>
</view>
<!-- #endif -->

